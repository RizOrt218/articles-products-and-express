extends ./../layout

block content
  ul
    each data in products
      li Product Name:&nbsp
        a(href="/products/#{data.id}") #{data.product_name}&nbsp
        form(type="submit", action="/products/#{data.id}/edit")
          input(type="hidden", name="_method", value="PUT")
          button(type="submit", value="submit") edit
        form(name="delete-products", method="POST", action="/products/#{data.id}")
          input(type="hidden", name="_method", value="DELETE")
          button(type="submit", value="submit") delete

  a(href="/products/new") New


